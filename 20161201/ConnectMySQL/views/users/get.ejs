<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <script src="/node_modules/jquery/dist/jquery.min.js"></script>

    <link href="/node_modules/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/node_modules/bootstrap/dist/css/bootstrap-theme.min.css" rel="stylesheet">
    <script src="/node_modules/bootstrap/dist/js/bootstrap.min.js"></script>

    <link href="/stylesheets/style.css" rel="stylesheet">

    <title>Document</title>
</head>
<body>
<div>
    <table border="1">
        <thead>
        <tr>
            <th>id</th>
            <th>名字</th>
            <th>年龄</th>
            <th>操作</th>
        </tr>
        </thead>
        <tbody>
        <% for(var i = 0;i < users.length;i++){
            var user = users[i]; %>
        <tr>
            <form class="form-user">
                <input type="hidden" name="id" value="<%= user.id %>">
                <td><%= user.id %></td>
                <td><input type="text" required="required" name="user" value="<%= user.user %>"></td>
                <td><input type="number" required="required" name="age" value="<%= user.age %>"></td>
                <td>
                    <a class="btn btn-default btn-delete" href="/users/delete?id=<%= user.id %>">删除</a>
                    <input type="submit" class="btn btn-default" value="修改">
                </td>
            </form>
        </tr>
        <% } %>
        </tbody>
    </table>
</div>

<div style="margin-top: 10px;">
    <form id="form-add-user">
        <span>用户名：</span>
        <input type="text" name="user" required="required">
        <span>年龄：</span>
        <input type="number" required="required" name="age">
        <input type="submit" value="保存">
    </form>
</div>

<script src="/users/get.js"></script>
</body>
</html>